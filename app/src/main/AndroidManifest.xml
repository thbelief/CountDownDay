<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thbelief.simplecountdownday">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".application.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleCountdownDay">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Cyanea.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LifeProgressActivity"
            android:exported="false"
            android:label="@string/myself_life_tips"
            android:theme="@style/Theme.Cyanea.Light">
            <intent-filter>
                <action android:name="thbelief.intent.action.LifeProgressActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MemorialDayActivity"
            android:exported="false"
            android:label="@string/create_memorial_day"
            android:theme="@style/Theme.Cyanea.Light">
            <intent-filter>
                <action android:name="thbelief.intent.action.MemorialDayActivity" />
            </intent-filter>
        </activity>
    </application>

</manifest>